<style>
  a {
    text-decoration: none;
  }

  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  nav {
    margin-top: 20px;
  }

  nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  nav ul li {
    display: inline;
    margin: 0 20px;
  }

  nav ul li a {
    color: #000;
    text-decoration: none;
    transition: 0.25s;
  }
  nav ul li a:hover {
    text-decoration: underline;
    font-weight: bold;
  }

  @media screen and (min-width: 650px) {
    header {
      flex-direction: row;
      justify-content: space-between;
    }

    nav {
      margin-top: 0;
    }

    nav ul li:last-of-type {
      margin-right: 0;
    }
  }
</style>
